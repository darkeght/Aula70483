<Window x:Class="CrudCompletoRegistroPessoa.View.DadosPessoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudCompletoRegistroPessoa.View"
        mc:Ignorable="d"
        Title="DadosPessoa" Height="200" Width="200" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Salvar" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="174" Height="30" Click="Button_Click"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label Content="Idade:" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Data de Nascimento:" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxNome" HorizontalAlignment="Left" Height="23" Margin="60,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbxIdade" HorizontalAlignment="Left" Height="23" Margin="60,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DatePicker Name="tbxNascimento" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="170" Height="27"/>
    </Grid>
</Window>
